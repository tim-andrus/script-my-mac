{
  "hediet.vscode-drawio.theme": "atlas",
  "terminal.explorerKind": "external",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "Hack",
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/bin/zsh",
      "args": ["-l"]
    }
  },
  "editor.fontFamily": "Hack",
  "editor.fontSize": 14,
  "debug.console.fontFamily": "Hack",
  "debug.console.fontSize": 14,
  "emmet.includeLanguages": {
    "postcss": "css",
    "javascript": "javascriptreact",
    "markdown": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "postcss": "css"
  },
  "emmet.triggerExpansionOnTab": true,

  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.validate": true,

  "workbench.editor.enablePreview": false,
  "cSpell.language": "en-GB",
  "cSpell.userWords": ["Darragh"],
  "editor.detectIndentation": false,
  "eslint.alwaysShowStatus": true,
  "explorer.confirmDelete": false,
  "editor.stopRenderingLineAfter": 100000,
  "explorer.compactFolders": false,
  "editor.bracketPairColorization.enabled": true,
  "workbench.colorTheme": "Default Dark+",
  "gitlens.advanced.messages": {
    "suppressLineUncommittedWarning": true
  },
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "off",
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "line",
  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.preview.scrollPreviewWithEditor": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "coverage-gutters.coverageReportFileName": "**/coverage/lcov-report/index.html",
  "files.associations": {
    "*.xml": "xml",
    "*.yml": "yaml"
  },
  "azureFunctions.showCoreToolsWarning": false,
  "azureFunctions.scmDoBuildDuringDeployment": true,
  "files.exclude": {
    "**/node_modules": true
  },
  "extensions.ignoreRecommendations": true,
  "javascript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifier": "relative",
  "workbench.startupEditor": "none",
  "redhat.telemetry.enabled": false,
  "eslint.workingDirectories": [
    "./backend",
    "./frontend",
    "./e2e-backend",
    "./marketing"
  ],
  "window.zoomLevel": 1,
  "editor.formatOnSave": true,
  "js/ts.implicitProjectConfig.checkJs": true,
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  }
}
